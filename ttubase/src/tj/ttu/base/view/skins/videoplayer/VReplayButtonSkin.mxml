<?xml version="1.0" encoding="utf-8"?>
<s:Skin 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	minWidth="54" minHeight="34" maxWidth="70" maxHeight="44"
	alpha.disabled="0.4" 
	>
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	<fx:Metadata>[HostComponent("spark.components.Button")]</fx:Metadata>
	<!-- Button -->
	
	<s:Group width="100%" height="100%">		
		
		<s:Rect alpha="0.6" radiusX="3" radiusY="3" width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="0x000000"/>
			</s:fill>			
		</s:Rect>
	
	<s:Group width="50" height="50" verticalCenter="0" horizontalCenter="0">
		<!-- Icon -->
		<s:BitmapImage width="28" height="28"  verticalCenter="-1" horizontalCenter="1"
					   source.up="@Embed('/embed_assets/images/video_player_replay_up.png')"
					   source.disabled="@Embed('/embed_assets/images/video_player_replay_up.png')"
					   source.over="@Embed('/embed_assets/images/video_player_replay_over.png')"
					   source.down="@Embed('/embed_assets/images/video_player_replay_down.png')"
					   />
	</s:Group>
	</s:Group>
</s:Skin>