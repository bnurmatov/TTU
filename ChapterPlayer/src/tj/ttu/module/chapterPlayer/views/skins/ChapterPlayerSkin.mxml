<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:components="tj.ttu.module.chapterPlayer.views.components.*"
		width="100%" height="100%"
		>
	
	<s:states>
		<s:State name="startScreen"/>
		<s:State name="content"/>
	</s:states>
	
	<!--Start Screen-->
	<components:StartScreenView id="startScreen"
								width="750" height="500"
								includeIn="startScreen"
								horizontalCenter="0" verticalCenter="0"
								skinClass="tj.ttu.module.chapterPlayer.views.skins.StartScreenViewSkin"
								/>
	
	<!--Chapter Player Panel-->
	<components:ChapterPlayerPanel id="content"
								   width="100%" height="100%"
								   includeIn="content"
								   skinClass="tj.ttu.module.chapterPlayer.views.skins.ChapterPlayerPanelSkin"
								   />
</s:Skin>
