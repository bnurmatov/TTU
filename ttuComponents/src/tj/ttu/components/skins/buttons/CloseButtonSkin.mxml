<!--- The default wireframe skin class for the Spark Button component. 
Skin classes in the wireframe package are useful for using as a simple base for a custom skin.

@see spark.components.Button

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   minWidth="18" minHeight="18"
				   alpha.disabled="0.5"
				   height="18" width="18"
				   >
	
	<fx:Metadata>
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- close icon -->
	<s:BitmapImage height="18" width="18"
				   horizontalCenter="0" verticalCenter="0"
				   smooth="true"
				   source.up="@Embed('/embed_assets/images/icon_close_up.png')"
				   source.down="@Embed('/embed_assets/images/icon_close_down.png')"
				   source.over="@Embed('/embed_assets/images/icon_close_over.png')"
				   source.disabled="@Embed('/embed_assets/images/icon_close_disabled.png')"
				   />
</s:SparkButtonSkin>
