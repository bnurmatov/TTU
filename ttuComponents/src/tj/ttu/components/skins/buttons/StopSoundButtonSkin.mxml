<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		minWidth="21" minHeight="21"
		alpha.disabled="0.5"
		>
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled"/>
		<s:State name="down"/>
		<s:State name="over"/>
		<s:State name="up"/>
	</s:states>
	
	<!-- background -->
	<s:Rect left="0" top="0" right="0" bottom="0" radiusX="6" radiusY="3" verticalCenter="1" 
			>
		<s:fill>
			<s:SolidColor color="#1e3455"/>
		</s:fill>
	</s:Rect>
	<s:Rect width="100%" height="100%" left="1" right="1" top="0" radiusX="3" radiusY="3" verticalCenter="1"
			>
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#436583"
								 color.down="#1b4265"
								 color.over="#578ab2"
								 color.up="#436583"/>
				<s:GradientEntry color="#436e94"
								 color.down="#26537a"
								 color.over="#26537a"
								 color.up="#436e94"/>
				<s:GradientEntry color="#457091"
								 color.down="#305c7f"
								 color.over="#305c7f"
								 color.up="#457091"/>
				<s:GradientEntry color="#5b8aaf"
								 color.down="#578ab2"
								 color.over="#1b4265"
								 color.up="#5b8aaf"/>
			</s:LinearGradient>
		</s:fill>
		<s:stroke>
			<s:LinearGradientStroke rotation="-32">
				<s:GradientEntry color="#a2bcd0"
								 />
				
				
			</s:LinearGradientStroke>
		</s:stroke>
		
	</s:Rect>
	<s:Group width="20" height="20" horizontalCenter="0" verticalCenter="1"
			 verticalCenter.down="2">
		
		
		<s:Ellipse verticalCenter="0" horizontalCenter="-1" width="20" height="20">
			<s:fill>
				<s:LinearGradient rotation="-90">
					<s:GradientEntry color="#153a56"
									 />
					<s:GradientEntry color="#264d6c"
									 />
					<s:GradientEntry color="#0d2b42"
									 />
					
				</s:LinearGradient>
			</s:fill>
			<s:stroke>
				<s:LinearGradientStroke rotation="90">
					<s:GradientEntry color="#0f2e49"
									 />
					<s:GradientEntry color="#5c83a4"
									 />
				</s:LinearGradientStroke>
			</s:stroke>
		</s:Ellipse>
		<s:BitmapImage width="11" height="9" horizontalCenter="-1" verticalCenter="0"
					   source.over="@Embed('/embed_assets/images/stop_over_icon.png')"
					   source="@Embed('/embed_assets/images/stop_up_icon.png')"/>
	</s:Group>
</s:Skin>
