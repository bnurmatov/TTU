<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata> 
	
	<fx:Script fb:purpose="styling">
		/**
		 * @private
		 */
		override protected function initializationComplete():void
		{
			useChromeColor = true;
			super.initializationComplete();
		}
	</fx:Script>
	
	<s:states>
		<s:State name="up" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="disabled" />
	</s:states>
	<s:Rect  width="100%" height="7" verticalCenter="0"  horizontalCenter="0" alpha="0.5" radiusX="8" radiusY="8"> 
		
	<s:filters >
			<s:DropShadowFilter color="#ffffff" inner="false"  strength="0.5" quality="0" alpha="100" angle="90" distance="1"  blurX="10"/>
		</s:filters>
</s:Rect>
	<s:Rect  width="100%" height="7" verticalCenter="0"  horizontalCenter="0" alpha="0.5" radiusX="8" radiusY="8"> 
		
		<s:fill>
			<s:SolidColor color="#bcc9d2" />
		</s:fill>
		<s:filters >
			<s:DropShadowFilter color="#000000" inner="true"  strength="0.5" quality="0" alpha="35" angle="120" distance="1"  blurX="10"/>
		</s:filters>
	</s:Rect>
		
	
	<!-- shadow -->
	<s:Rect left="2" right="2" height="1" horizontalCenter="0" verticalCenter="0"
			>
		<s:fill>
			<s:SolidColor color="0x798691" />
		</s:fill>
	</s:Rect>
	
	<!-- hit area -->
	
</s:SparkSkin>
