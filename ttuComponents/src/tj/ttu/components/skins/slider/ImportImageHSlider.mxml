<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009" 
			 minHeight="11" alpha.disabled="0.5" xmlns:local="*" xmlns:slider="tj.ttu.components.components.slider.*" 
			 >
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.HSlider")]
		]]>
	</fx:Metadata> 
	<fx:Script>
		<![CDATA[
			import tj.ttu.base.constants.FontConstants;
			import tj.ttu.base.constants.ResourceConstants;
		]]>
	</fx:Script>

	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<fx:Declarations>
		<!--- The tooltip used in the mx.controls.Slider control. 
		To customize the DataTip's appearance, create a custom HSliderSkin class.-->
		<fx:Component id="dataTip">     
			<s:DataRenderer minHeight="24" minWidth="40" y="-34" visible="false">  
				<s:Rect top="0" left="0" right="0" bottom="0">
					<s:fill>
						<s:SolidColor color="0x000000" alpha=".9"/>
					</s:fill>
					<s:filters>
						<s:DropShadowFilter angle="90" color="0x999999" distance="3"/>
					</s:filters>
				</s:Rect>
				<s:Label id="labelDisplay" text="{data}"
						 horizontalCenter="0" verticalCenter="1"
						 left="5" right="5" top="5" bottom="5"
						 textAlign="center" verticalAlign="middle"
						 styleName="uiFont"
						 fontWeight="normal" color="white" fontSize="11">
				</s:Label>
			</s:DataRenderer>
		</fx:Component>
	</fx:Declarations>
	<s:Label  id="widthLabel"
			  left="-45"
			  color="#384e5b"
			  fontWeight="bold"
			  verticalAlign="middle"
			  verticalCenter="0"
			  styleName="uiFont"
			  text="{resourceManager.getString( ResourceConstants.TTU_COMPONENTS, 'widthLabelText' ) || 'Width:'}"
			  />
	
	<!--- The default skin class is HSliderTrackSkin. 
	@copy spark.components.supportClasses.TrackBase#track
	@see spark.skins.spark.HSliderTrackSkin -->
	<s:Button id="track" width="234" height="20" left="0" right="0" top="0" bottom="0"
			  verticalCenter="0"
			  tabEnabled="false"
			  skinClass="tj.ttu.components.skins.slider.ImportImageHSliderTrackButtonSkin" />
	
	<!--- The default skin class is HSliderThumbSkin.
	@copy spark.components.supportClasses.TrackBase#thumb 
	@see spark.skins.spark.HSliderThumbSkin -->
	<slider:ThumbButton id="thumb"  width="11" height="11"
					   verticalCenter="0"
					   tabEnabled="false"
					   sliderValue="{hostComponent.value}"
					   skinClass="tj.ttu.components.skins.slider.ImportImageHSliderThumbButtonSkin" />
</s:SparkSkin>
