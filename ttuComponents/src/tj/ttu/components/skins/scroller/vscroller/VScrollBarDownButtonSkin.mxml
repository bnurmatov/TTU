<!--- The default skin class for the Spark Button component.  

@see spark.components.Button

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   width="15" height="15" 
				   alpha.disabled="0.5">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- layer 1: shadow -->
	<!--- @private -->
	<s:Rect width="100%" height="100%" alpha="0">
		<s:fill>
			<s:SolidColor color="0xFFFFFF"/>
		</s:fill>
	</s:Rect>
	
	<s:Ellipse includeIn="down" horizontalCenter="0" verticalCenter="0" width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="#dae2e8"/>
		</s:fill>
		<s:filters>
			<s:DropShadowFilter alpha="0.5" angle="90" blurX="1" blurY="1" color="#FFFFFF" distance="1" hideObject="false" inner="false" knockout="false" quality="2" strength="1"/>
			<s:DropShadowFilter blurX="3" blurY="3" distance="1" hideObject="false" inner="true" color="0x000000" strength="1" alpha="0.5" quality="2" knockout="false" angle="45.0"/>
		</s:filters>
	</s:Ellipse>
	
	<s:BitmapImage smooth="true" 
			 verticalCenter="0" horizontalCenter="0"
			 source.up="@Embed('/embed_assets/images/vscroll_down_normal.png')"
			 source="@Embed('/embed_assets/images/vscroll_down_overl.png')"
			 /> 
	
	<!-- layer 8: text -->
	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
	<s:Label id="labelDisplay"
			 textAlign="center"
			 maxDisplayedLines="1" alpha="0"
			 horizontalCenter="0" verticalCenter="1" verticalAlign="middle"
			 left="10" right="10" top="2" bottom="2">
	</s:Label>
	
</s:SparkButtonSkin>
